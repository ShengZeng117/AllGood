<div class="content" id="staffDetailPage">
    <form method="post">
        <div id="headPart"><span id="fstPart">Staff</span><span id="secdPart">/Staff Detail</span></div>
        <div id="staffDetails"> <span id="staffName">Jason's</span> Personal Detail</div>
        <div class="person">
            {{#with staff}}
            <div class="attr name">
                <div id="staffNameFst">
                    <span class="info">First name:</span>
                    <span id="staffFName">{{this.FirstName}}</span>
                </div>
                <div id="staffNameSecd">
                    <span class="info">Last name:</span>
                    <span id="staffLName">{{this.LastName}}</span>
                </div>

            </div>
            <div class="attr gender">
                <span class="info">Gender:</span>
                <span id="staffGender"> {{this.Gender}}</span>
            </div>

            <div class="attr id">
                <span class="info">Staff ID:</span>
                <span id="staffID"> {{this.StaffId}}</span>
            </div>
            <div class="attr">
                <span class="info">Email:</span>
                <span id="staffEmail">{{this.Email}}</span>
            </div>
            <div class="attr contact">
                <span class="info">Contact number:</span>
                <span id="staffNumber">{{this.ContactNumber}}</span>
                
            </div>
            <div class="attr staffPosition">
                <span class="info">Position:</span>
                <span id="staffPosition">{{this.Position}}</span>
                
            </div>
            {{/with}}
            <div class="attr staffDevice">
                <span class="info">Devices:</span>
                {{#each availableDevices}}
                <span id="staffDevice">{{this.Device_name}}</span>
                <button style="border: none" value="{{this.Device_name}}"><img src="/picture/delet.png"></img></button>
                {{/each}}
                <img src="/picture/add.png" alt="" id="addToStaff">
                <input type="text" name="newDeviceAdd" id="newDeviceAdd">
            </div>
        </div>
        <div id="s_mask" class="mask"></div>
        <div id="s_formAdd" class="form-add">
            <div class="form-add-title">
                <span>Fire Staff</span>
                <div id="j_hideFormAdd">x</div>
            </div>
            

            <div class="form-submit">
                <input type="button" value="Yes" id="yesBtn">
            </div>
            <div class="form-submit">
                <input type="button" value="No" id="noBtn">
            </div>
        </div>
        <div id="bottom">
            <button id="saveChanges" disabled>Save</button>
            <button id="firestaff" name="deleteS" value="1">Delete</button>
        </div>
    </form>
</div>

<script>

let staffDevice = document.getElementById("staffDevice");
let saveChanges = document.getElementById("saveChanges");
let addToStaff = document.getElementById("addToStaff");
let newDeviceAdd = document.getElementById("newDeviceAdd");
addToStaff.onclick = function(){
    newDeviceAdd.style.display = "inline-block";
    saveChanges.removeAttribute('disabled');
    saveChanges.onclick = function(){
        newDeviceAdd.style.display = "none";
        //newDeviceAdd.value = "";
        
    }
    
    
}
let fireStaff = document.getElementById("firestaff");
let SMask = document.getElementById("s_mask");
let SFormAdd = document.getElementById("s_formAdd");
fireStaff.onclick = function(){
    SMask.style.display = "block";
    SFormAdd.style.display = "block";
}

function closeDeletPage(){
    SMask.style.display = "none";
    SFormAdd.style.display = "none";
}
let noBtn = document.getElementById("noBtn");
noBtn.onclick = function(){
    closeDeletPage();
}

let yesBtn = document.getElementById("yesBtn");
yesBtn.onclick = function(){
    closeDeletPage();
}



</script>